---
interface Props {
  id: string;
  name: string;
  position: string;
  avatar: string;
}

const { id, name, position, avatar } = Astro.props;
---

<a 
  href={`/employee/${id}`}
  class="block bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-transform duration-200"
>
  <div class="aspect-square overflow-hidden">
    <img 
      src={avatar} 
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-4">
    <h3 class="font-semibold text-lg text-gray-800">{name}</h3>
    <p class="text-gray-600">{position}</p>
  </div>
</a> 